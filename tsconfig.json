{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Change this to the root folder
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true // Ensure this is enabled if you're working with JSON files
  },
  "include": [
    "src/**/*",
    "api/**/*" // Include api folder as well
  ]
}
