{
  "compilerOptions": {
    "target": "ES2020", // ES2020 allows for modern JavaScript features
    "module": "CommonJS", // CommonJS is standard for Node.js
    "strict": true, // Enables strict type checking
    "esModuleInterop": true, // Ensures compatibility with CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file name casing
    "skipLibCheck": true, // Skips type checking of declaration files for faster builds
    "outDir": "dist", // Output directory for compiled JavaScript
    "rootDir": "src" // Specifies the root directory of TypeScript files
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}
